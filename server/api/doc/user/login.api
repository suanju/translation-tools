syntax = "v1"

info(
	desc: "用户登入"
)

type (
	userLoginReq {
		Email   string `json:"email" validate:"email"`
		Passwod string `json:"password" validate:"min=6"`
	}

	userLoinResp {
		Token string `json:"token"`
	}

	userRegisterReq {
		Email         string `json:"email" validate:"email"`
		Password      string `json:"password" validate:"min=6"`
		PasswordCheck string `json:"password_check" validate:"min=6"`
	}

	userRegisterResp {
		Token string `josn:"tokne"`
	}
)

@server(
	group: users/login
	prefix: /users
)

service  userLogin {
	@handler UserLogin
	post /login (userLoginReq) returns (userLoinResp)
	
	@handler UserRegister
	post /register (userRegisterReq) returns (userRegisterResp)
}